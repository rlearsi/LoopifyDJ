<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:id="@+id/player_one">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/spacing_sm" />
            <solid android:color="@color/black_002" />
            <padding
                android:bottom="@dimen/spacing_sm"
                android:left="@dimen/spacing_sm"
                android:right="@dimen/spacing_sm"
                android:top="@dimen/spacing_sm" />
        </shape>
    </item>
    <item android:id="@+id/layer_two">
        <shape android:shape="rectangle">
            <corners android:radius="@dimen/spacing_sm" />
            <solid android:color="#F7221F28" />
        </shape>
    </item>
</layer-list>
